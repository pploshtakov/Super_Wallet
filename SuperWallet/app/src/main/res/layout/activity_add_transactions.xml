<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_tr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pesho.superwallet.AddTransactionsActivity">
    <github.chenupt.springindicator.SpringIndicator
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:siTextSize="18sp"
        app:siTextColor="@color/colorPrimaryDark"
        app:siSelectedTextColor="@android:color/black"
        app:siIndicatorColor="@color/accent"
        android:background="@color/colorPrimary"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_below="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
