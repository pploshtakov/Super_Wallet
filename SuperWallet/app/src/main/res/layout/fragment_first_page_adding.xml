<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pesho.superwallet.FirstPageAddingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/cancel"
            android:background="@color/transparent"
            android:id="@+id/addt_cancel_button"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/addt_currency_text_size"
            android:background="@color/transparent"
            android:id="@+id/addt_transaction_type_TV"
            />
        <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/save"
        android:background="@color/transparent"
        android:id="@+id/addt_first_page_save_button"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/secondPrimary"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/addt_income_expense_tv"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <com.example.pesho.superwallet.myViews.AutoResizeTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="0"
                android:textSize="@dimen/addt_amount_text_size"
                android:gravity="bottom|end"
                android:textColor="@color/white"
                android:id="@+id/addt_amount_tv"
                android:ellipsize="none"
                android:maxLines="1"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BGN"
                android:textColor="@color/white"
                android:textSize="@dimen/addt_currency_text_size"
                android:gravity="bottom"
                android:id="@+id/addt_currency_tv"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/addt_account_spinner"
                android:background="@color/transparent"
                ></Spinner>
            <Spinner
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/addt_account1_spinner"
                android:background="@color/transparent"
                ></Spinner>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/addt_select_category_button"
                android:background="@color/transparent"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="1"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_one"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="4"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_four"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="7"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_seven"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text=","
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_comma"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="2"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_two"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="5"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_five"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="8"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_eight"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="0"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_zero"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="3"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_three"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="6"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_six"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="9"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_nine"
                ></Button>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:src="@drawable/backspace"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_backspace"
                ></ImageButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/md_blue_grey_50"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="%"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_divide"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="*"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_mul"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="-"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_minus"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="+"
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_plus"
                ></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:background="@color/transparent"
                android:textColor="@android:color/black"
                android:text="="
                android:textSize="@dimen/addt_currency_text_size"
                android:id="@+id/button_result"
                ></Button>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
