<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="com.example.pesho.superwallet.LoginActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:lines="1"
        android:inputType="text"
        android:textColor="@color/md_white_1000"
        android:textColorHint="@color/md_white_1000"
        android:layout_marginTop="100dp"
        android:maxLength="@integer/max_symbols"
        android:hint="@string/username"
        android:id="@+id/lp_username_ET"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:lines="1"
        android:maxLength="@integer/max_symbols"
        android:textColor="@color/md_white_1000"
        android:textColorHint="@color/md_white_1000"
        android:inputType="textPassword"
        android:id="@+id/lp_password_ET"
        android:layout_below="@+id/lp_username_ET"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lp_password_ET"
        android:id="@+id/lp_login_reg_buttons"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/login"
            android:background="@color/black"
            android:textColor="@color/md_white_1000"
            android:layout_margin="5dp"
            android:id="@+id/lp_login_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/register"
            android:background="@color/black"
            android:layout_margin="5dp"
            android:textColor="@color/md_white_1000"
            android:id="@+id/lp_register_button"
            />
    </LinearLayout>
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lp_login_reg_buttons"
         />
</RelativeLayout>
